@model IEnumerable<prjToDo.Models.tToDo>

@{
    ViewBag.Title = "新增待辦事項";
}

<h2>新增待辦事項</h2>

<p>
    @Html.ActionLink("新增待辦事項", "Create")
</p>
<table class="table">
    <tr>
        <th>
            編號
        </th>
        <th>
            <!--@Html.DisplayNameFor(model => model.fLevel)-->
            標題
        </th>
        <th>
            <!--@Html.DisplayNameFor(model => model.fDate)-->
            重要層級
        </th>
        <th>
            結案日期
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.fId
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fLevel)
        </td>
        <td>
            @DateTime.Parse(item.fDate.ToString()).ToShortDateString()
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.fId }
                ,new { onclick ="return confirm('確認刪除嗎?')", @class="btn btn-danger"})
        </td>
        </tr>
    }

    </table>
